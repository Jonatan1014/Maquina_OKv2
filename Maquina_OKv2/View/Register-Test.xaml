<Window x:Class="Maquina_OKv2.View.Register_Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register_Test" Height="450" Width="800">
    <Grid>
        <!-- Título de la norma seleccionada -->
        <TextBlock x:Name="txtNormaTitle" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- Contenedor para parámetros dinámicos -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,60,20,70">
            <StackPanel x:Name="parametersPanel" />
        </ScrollViewer>

        <!-- Botón para guardar los resultados -->
        <Button Content="Guardar Resultados" Width="150" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20" Click="SaveResults_Click"/>
    </Grid>
</Window>
