<UserControl x:Class="Maquina_OKv2.View.ControUserView.Test_List"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Maquina_OKv2.View.ControUserView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2A2A3D">
        <Label Content="Norma tecnica Colombiana NTC:" HorizontalAlignment="Left" Margin="28,30,0,0" VerticalAlignment="Top" FontFamily="Montserrat Medium" Foreground="White"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="28,80,551,10"/>

        <!-- Email Input con color de fondo temporal y sin margen excesivo -->
        <TextBox x:Name="search_ntc" HorizontalAlignment="Left" VerticalAlignment="Top"
                 Width="200" Height="25"
                 Background="#505060" 
            BorderThickness="0,0,0,1" FontSize="13" 
                 BorderBrush="White" Foreground="White" Text="asas" Margin="536,32,0,0" TextChanged="search_ntc_TextChanged"/>

        <Image HorizontalAlignment="Left" Height="31" Margin="736,30,0,0" VerticalAlignment="Top" Width="31" Source="/View/Image/lupa.png"/>
    </Grid>
</UserControl>
